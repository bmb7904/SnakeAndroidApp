<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item>
        <shape >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:startColor="#1717E8"
                android:endColor="#A3F0FF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="@dimen/pause_button_width"
                android:height="@dimen/pause_button_height"
                />
            <stroke
                android:width="4dp"
                android:color="#871A09"
                />
        </shape>
    </item>
</selector>